{
  "name": "re-download-manager",
  "author": {
    "name": "Team RDM",
    "email": "jackma12138@gmail.com"
  },
  "version": "0.1.0",
  "private": true,
  "productName": "Re Download Manager",
  "main": "src/electron.js",
  "icon": "public/favicon.ico",
  "homepage": "./",
  "dependencies": {
    "axios": "^1.6.8",
    "bootstrap": "^5.3.3",
    "react": "^18.2.0",
    "react-bootstrap": "^2.10.2",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "react-scripts": "5.0.1"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "start": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "rdm-server": "set ELECTRON_START_URL=http://localhost:3000 && electron .",
    "rdm-build": "electron-builder build --win -c.extraMetadata.main=src/electron.js --publish never",
    "rdm-publish": "electron-builder build --mac --win --publish always",
    "package": "electron-builder build -c.extraMetadata.main=src/electron.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "concurrently": "^8.2.2",
    "electon": "^0.0.1-security",
    "electron": "^27.3.8",
    "electron-builder": "^24.6.4",
    "electron-is-dev": "^3.0.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.re-download-manager",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/**/*",
      "src/**/*",
      "package.json",
      "package-lock.json"
    ],
    "extraMetadata": {
      "main": "src/electron.js"
    },
    "compression": "maximum",
    "removePackageScripts": true,
    "removePackageKeywords": true,
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64"]
        },
        {
          "target": "zip",
          "arch": ["arm64"]
        }
      ],
      "icon": "public/logo512.png",
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "sign": false,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
